<div class="container-fluid">
  <div class="row" id="forum-layout">
    <div class="col-md-4 col-lg-3 d-flex flex-column align-items-center p-3 bg-dark">
      <% if member_signed_in? %>
        <%= gravatar_image_tag(current_member.email, size: 32, alt: current_member.name, class: "rounded-circle av-48") %>
      <% end %>
    </div>
    <div class="col-md-8 col-lg-9">
      <p id="notice"><%= notice %></p>

      <h1>Posts</h1>

      <table>
        <thead>
          <tr>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.body %></td>
              <td><%= link_to 'Show', post %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Post', new_post_path %>

    </div>
  </div>
</div>
