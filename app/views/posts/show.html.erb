<div class="px-lg-3">
  <%= post_member_header %>
  <h6 class="mb-1 fw-bold"><%= @post.title %></h6>
  <p>
    <%= @post.body %>
  </p>

  <%= link_to 'Back', posts_path %> |
  <% if member_signed_in? and current_member == @post.member %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>

</div>
