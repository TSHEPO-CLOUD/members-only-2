<div class="card post-card border-0 shadow mb-3">
  <div class="card-body d-flex position-relative">
    <%= gravatar(post) %>
    <div class="card-text d-flex flex-column">
      <h6 class="fw-bold mb-1">
        <%= link_to post, class: "stretched-link card-link text-decoration-none" do %>
          <% post.title %>
        <% end %>
      </h6>
      <p class="card-text mb-0"><%= post.body %></p>
    </div>
  </div>
  <%= post_owner_actions(post) %>
</div>
