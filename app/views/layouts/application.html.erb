<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row" id="forum-layout">
        <div class="col-md-4 col-lg-3 bg-dark">
          <div class="sticky-top h-100 py-3 d-flex flex-column align-items-center" id="left">
            <%= link_to "MEMBERS ONLY", root_path, class: "fs-3 fw-bold mb-4 bg-light text-decoration-none px-2 rounded-2" %>

            <% if member_signed_in? %>
              <%= link_to edit_member_registration_path do %>
                <%= gravatar_image_tag(current_member.email, size: 32, alt: current_member.name, class: "rounded-circle av-48") %>
              <% end %>
              <h5 class="text-white mt-2 mb-0"><%= current_member.name %></h5>
              <small class="text-secondary lh-1"><i>Member since: <%= current_member.created_at.year %></i></small>

              <hr>

              <h6 class="card-title mb-0 lh-1 text-secondary">Total Posts</h6>
              <p class="mb-0 fs-1 fw-bold lh-1 text-white"><%= current_member.posts.count %></p>

              <hr>

              <%= link_to "Sign out", destroy_member_session_path, method: :delete, class: "btn btn-danger shadow-sm px-5" %>
            <% else %>
              <div class="my-auto">
                <%= link_to "Log in", new_member_session_path, class: "btn btn-outline-primary fw-bold px-5 mb-3" %>
                <%= link_to "Sign up", new_member_registration_path, class: "btn text-white fw-bold px-5 mb-3" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-md-8 col-lg-9">
          <div class="row border-bottom bg-light">
            <div class="col-12">
              <nav class="nav justify-content-end py-3">
                <%= link_to 'New Post', new_post_path, class: "nav-link btn btn-primary px-5" %>
              </nav>
            </div>
          </div>


          <!-- Flash messages start -->
          <div class="row">
            <div class="col">
              <% if flash[:notice] %>
                <div class="alert alert-info alert-dismissible mb-0 rounded-0 border-info fade show" role="alert">
                  <div class="container">
                    <p class="mb-0"><%= notice %></p>
                  </div>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% end %>
              <% if flash[:alert] %>
                <div class="alert alert-danger alert-dismissible mb-0 rounded-0 border-danger fade show" role="alert">
                  <div class="container">
                    <p class="mb-0"><%= alert %></p>
                  </div>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% end %>
            </div>
          </div>
          <!-- Flash messages end -->

          <div class="row gx-lg-5">
            <div class="col-md-8 pt-3">

              <%= yield %>

            </div>
            <div class="col-md-4 py-3">
              <% if @members %>
              <h6 class="fw-bold fs-4">Members</h6>

              <% if member_signed_in? %>
              <div class="card shadow">
                <div class="card-body">
                  <ul class="list-group list-group-flush">
                    <% @members.each do | member | %>
                    <li class="list-group-item d-flex">
                      <%= gravatar_image_tag(member.email, size: 32, alt: member.name, class: "rounded-circle av-32") %>

                      <p class="mb-0 fw-light ml-2 lh-1">
                        <b><%= member.name %> <br></b>
                        <small><i>Posts: <%= member.posts.count %></i></small>
                      </p>
                    </li>
                    <% end %>
                  </ul>
                </div>
              </div>
              <% else %>
              <h6 class="mb-0 text-muted">Log in to see members</h6>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </body>
</html>
