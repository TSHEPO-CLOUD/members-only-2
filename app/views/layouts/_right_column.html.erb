<div class="py-3 px-md-3">
  <h6 class="fw-bold fs-6">Forums you belong</h6>

  <div class="row row-cols-lg-3 g-2">
    <% @forums.each do | forum | %>
    <div class="col">
      <div class="card border shadow-sm hover-1 h-100">
        <div class="card-body d-flex flex-column align-items-start p-2">
          <h6 class="card-title"><%= forum.name %></h6>
          <%= link_to "#{forum.members.count} members", forum_path(forum), class: 'stretched-link text-decoration-none fs-12 fw-bold mt-auto alert-primary rounded-pill px-2' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
