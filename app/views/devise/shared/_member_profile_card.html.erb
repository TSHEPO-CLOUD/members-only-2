<%= link_to edit_member_registration_path do %>
  <%= gravatar(current_member, "av-48") %>
<% end %>
<h5 class="text-white mt-2 mb-0"><%= current_member.name %></h5>
<small class="text-secondary lh-1"><i>Member since: <%= current_member.created_at.year %></i></small>

<hr>

<div class="row">
  <div class="col-6">
    <h6 class="fw-light mb-0 lh-1 text-secondary">Posts</h6>
    <p class="mb-0 fs-3 lh-1 text-white"><%= current_member.posts.count %></p>
  </div>
  <div class="col-6">
    <h6 class="fw-light mb-0 lh-1 text-secondary">Comments</h6>
    <p class="mb-0 fs-3 lh-1 text-white"><%= current_member.comments.count %></p>
  </div>
</div>

<hr>

<%= link_to "Sign out", destroy_member_session_path, method: :delete, class: "btn btn-danger shadow-sm px-5" %>
