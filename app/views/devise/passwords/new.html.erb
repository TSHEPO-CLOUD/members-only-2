<div class="row justify-content-center">
  <div class="col-sm-8 col-md-12 col-lg-8">
    <div class="card shadow">
      <div class="card-body">
        <h2 class="fs-bold fs-4">Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="col-12 mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="col-12 mb-3">
            <%= f.submit "Send reset instructions", class: "btn btn-primary" %>
          </div>
        <% end %>

        <p class="fw-light"><%= render "devise/shared/links" %></p>

      </div>
    </div>
  </div>
</div>
